{
  // --- Editing behavior ---
  "format_on_save": "on",
  "autosave": "on_focus_change",
  // --- Whitespace / indentation ---
  "hard_tabs": false,
  "tab_size": 2,
  // --- Code actions (Biomelint/organizeImports, etc.) ---
  "code_actions_on_format": {
    "source.fixAll.biome": true,
    "source.organizeImports.biome": true
  }
}
